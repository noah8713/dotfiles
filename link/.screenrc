bindkey "^[OQ" screen    # F2 = new window
bindkey "^[OR" prev      # F3 = prev
bindkey "^[OS" next      # F4 = next
bindkey "^[[18~" copy    # F7 = copy/scroll back mode

#  screen -t irssi irssi

bind j focus down
bind k focus up
bind t focus top
bind b focus bottom

#  defscrollback 2000
defutf8 on

